<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextViewBase" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorTextBase</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
