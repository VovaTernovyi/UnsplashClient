<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.owner.unsplashclient.model.entity.UnsplashEntity" />

        <variable
            name="user"
            type="com.example.owner.unsplashclient.model.entity.UserEntity" />

        <variable
            name="profileImage"
            type="com.example.owner.unsplashclient.model.entity.ProfileImageEntity" />
    </data>

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/base_margin_8dp"
            android:elevation="4dp"
            card_view:cardCornerRadius="@dimen/card_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="center"
                    app:imageUrl="@{item.urls.regular}" />

                <TextView
                    android:id="@+id/user_name"
                    style="@style/TextViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_image"
                    android:paddingLeft="@dimen/base_margin_16dp"
                    android:paddingRight="@dimen/base_margin_16dp"
                    android:paddingTop="@dimen/base_margin_16dp"
                    android:text="@{user.username}" />

                <TextView
                    android:id="@+id/item_created_at"
                    style="@style/TextViewBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:paddingLeft="@dimen/base_margin_16dp"
                    android:paddingRight="@dimen/base_margin_16dp"
                    android:text="@{item.dateFormatted}"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/description"
                    style="@style/TextViewBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_created_at"
                    android:paddingBottom="@dimen/base_margin_16dp"
                    android:paddingLeft="@dimen/base_margin_16dp"
                    android:paddingRight="@dimen/base_margin_16dp"
                    android:text="@{item.description}" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>